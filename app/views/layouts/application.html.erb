<body <% if current_page?(about_path) %>class="about"<% end %>>

	<div class="header">
		<div class="container">
			<a href="/"><h1>Wivern</h1></a>
			<ul class="game-picker">
				<li class="active">beta <span class="arrow-up"></span></li>
				<li>Other games...</li>
			</ul>
			<ul class="nav">
					
				<% if user_signed_in? %>

					<li <% if current_page?(dashboard_path) %>class="active"<% end %>>
						<%= link_to 'Dashboard', dashboard_path %>
					</li>
					<li <% if current_page?(edit_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Settings', edit_user_registration_path %>
					</li>
					<li <% if current_page?(destroy_user_session_path) %>class="active"<% end %>>
						<%= link_to link_to :logout, destroy_user_session_path, :method => :delete %>
					</li>

				<% else %>

					<li <% if current_page?(root_path) %>class="active"<% end %>>
						<%= link_to "Early access", root_path %>
					</li>
					<li <% if current_page?(about_path) %>class="active"<% end %>>
						<%= link_to "About us", about_path %>
					</li>

					<li <% if current_page?(new_user_registration_path) %>class="active"<% end %>>
						<%= link_to 'Create Account', new_user_registration_path %>
					</li>
					<li <% if current_page?(new_user_session_path) %>class="active"<% end %>>
						<%= link_to 'Login', new_user_session_path %>
					</li>

				<% end %>

				
			</ul>
		</div>
	</div>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>

	<div class="footer">
		<div class="container assembly">
			An <%= link_to image_tag("assembly2.jpg") %> project &#8212; <a href="http://www.assemblymade.com/wivern">Contribute now!</a>
		</div>
	</div>

